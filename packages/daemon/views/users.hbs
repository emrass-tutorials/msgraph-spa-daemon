<center>
    <h2>Users for tenant {{tenantId}}</h2>

    <hr />

    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>ID</th>
                <th>UPN</th>
                <th>Job Title</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{displayName}}</td>
                <td>{{id}}</td>
                <td>{{userPrincipalName}}</td>
                <td>{{jobTitle}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{#if users.length}}
    <em>No users have been sync'd for this tenant just yet.</em>
    {{/if}}

</center>